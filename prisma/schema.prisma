generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  clerkUserId String   @unique
  email     String   @unique
  name      String?
  imageUrl String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Records  Record[]
  Goals Goal[]
  Income Income[]
}

model Record{
  id        String   @id @default(uuid())
  text      String
  amount    Float
  category  String @default("Other")
  date      DateTime @default(now())
  userId    String
  user      User    @relation(fields: [userId], references: [clerkUserId], onDelete: Cascade)
  createdAt DateTime @default(now())
  @@index([userId])
}

model Goal {
  id        String   @id @default(uuid())
  title     String
  target    Float        
  deadline  DateTime?    
  progress  Float @default(0) 
  userId    String
  user      User    @relation(fields: [userId], references: [clerkUserId], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  @@index([userId])
}

model Income {
  id        String   @id @default(uuid())
  amount    Float
  description String?
  date      DateTime @default(now())
  userId    String
  user      User     @relation(fields: [userId], references: [clerkUserId], onDelete: Cascade) 
  createdAt DateTime @default(now()) 
  @@index([userId])
}